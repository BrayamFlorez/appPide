<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_claro"
    tools:context=".fragments.TiendasFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="#EFF2F7"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/access"
            android:fontFamily="@font/cream"
            android:text="Producto a Pedir"
            android:textSize="35dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cream"
            android:hint="Comentario" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cream"
            android:hint="Cantidad" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/crearPedido"
            android:fontFamily="@font/cream"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_redondos"
            android:backgroundTint="@color/access"
            android:text="@string/btn_crearP" />


    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/access"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/search"/>

    </LinearLayout>




</LinearLayout>